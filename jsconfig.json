{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Bundler",
    "checkJs": true,
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/js/*"]
    },
    "types": ["node"]
  },
  "include": [
    "./src/js/server/**/*",
    "./src/js/shared/**/*",
    "./gulpfile.esm.js/**/*"
  ]
}
